.page-container{
  padding:50rpx 40rpx;
}
.form-section{
  margin-bottom: 10px;
}
.form-textarea{
  display: block;
  height: 80px;
  width: 100%;
  font-size: 14px;
  line-height: 20px;
}
.resource-section{
  position: relative;
}
.resource-section .uploader-container{
  position: relative;
  display: inline-block;
  height: 100px;
  width: 100px;
  background-color:#f5f5f5;
  margin-right: 12rpx;
}

.resourece-add,.uploader-image,.uploader-viode{
  display: inline-block;
  width: 100%;
  height: 100%;
}
.resourece-add:before{
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 2px;
  height: 30%;
  background-color: #a9a9a9;
}

.resourece-add:after,.resourece-add_item:after{
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 30%;
  height: 2px;
  background-color: #a9a9a9;
}
.btn-section{
  text-align: right;
  margin-top:80rpx;
}
.btn-section .submitBtn{
  display: inline-block;
  width: 65px;
  height: 40px;
  border-radius: 5px;
  background-color: #00c677;
  color: #fff;
  font-size: 16px;
  line-height: 40px;
  border-radius: 4px;
}
.submitBtn_hove{
  opacity: .8;
}

