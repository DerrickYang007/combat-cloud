.topics-list .topics-item{
  display: flex;
  padding:30rpx 24rpx;
  border-bottom:1px solid #e4e4e4;
  background-color:#fff;
  line-height: 40rpx;
}
.topics-item .topics-image{
  flex:none;
}
.topics-userInfo{
  flex: 1
}
.topics-item  .topics-avatar{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  background-color:#f5f5f5;
}
.topics-userInfo .userInfo-nickName{
  font-size:14px;
  color:#606686;
}
.topics-userInfo .userInfo-content{
  font-size:14px;
  color:#333;
  margin:10px 0;
}
.topics-item .resource-image, .resource-video{
  width: 300rpx;
  height: 300rpx;
  background-color: #f5f5f5;
}
.resource-video .controls{
  width: 100%;
  height: 100%;
}
.topics-item .topics-reply{
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
  font-size:10px;
  color: #999;
}